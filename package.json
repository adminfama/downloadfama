{
    "name": "electron-updater-example",
    "version": "0.5.1",
    "main": "main.js",
    "description": "electron-updater example project",
    "author": "Matt Haggard",
    "scripts": {
        "publish": "build --mac --win -p always"
    },
    "devDependencies": {
        "electron": "^1.8.1",
        "electron-builder": "^19.49.3"
    },
    "dependencies": {
        "electron-log": "^1.3.0",
        "electron-updater": "^2.17.7"
    },
    "build": {
        "appId": "com.github.adminfama.electronupdaterexample",
        "mac": {
            "category": "your.app.category.type",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "publish": [
            {
                "provider": "github",
                "owner": "adminfama",
                "repo": "electron-updater-example"
            }
        ]
    }
}
